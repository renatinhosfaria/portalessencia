{
  "name": "essencia",
  "version": "0.0.1",
  "private": true,
  "description": "Portal Digital Colégio Essência Feliz",
  "license": "UNLICENSED",
  "author": "Colégio Essência Feliz",
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "pnpm --filter @essencia/db generate",
    "db:migrate": "pnpm --filter @essencia/db migrate",
    "db:studio": "pnpm --filter @essencia/db studio"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  }
}
