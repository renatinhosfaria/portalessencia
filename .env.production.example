# Environment Variables - Production
# Copy this file to .env on the VPS and fill in the values

# Database
DATABASE_URL=postgresql://essencia:YOUR_PASSWORD@postgres:5432/essencia_db
POSTGRES_USER=essencia
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE
POSTGRES_DB=essencia_db

# Redis
REDIS_URL=redis://redis:6379

# Session
SESSION_TTL_HOURS=24

# Cookie Domain (leave empty for IP-based access, set when you have a domain)
COOKIE_DOMAIN=

# API Internal URL (used by Next.js apps)
API_INTERNAL_URL=http://api:3002
